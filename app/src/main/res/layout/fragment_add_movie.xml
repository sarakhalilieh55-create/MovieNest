<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMovieFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Car Number -->
        <EditText
            android:id="@+id/etCarNumberAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="namemovie"
            android:inputType="number" />

        <!-- Car Name -->
        <EditText
            android:id="@+id/etNameCarAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="nameseries" />

        <!-- Car Model -->
        <EditText
            android:id="@+id/etCarModelAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="time" />

        <!-- Year of Car -->
        <Spinner
            android:id="@+id/yearOfCarSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="year" />

        <!-- Manufacturer -->
        <EditText
            android:id="@+id/etManufacturerAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="summarize" />

        <!-- Phone -->
        <EditText
            android:id="@+id/etPhoneAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="type"
             />

        <!-- Car Type -->

        <!-- Year of Test -->
        <EditText
            android:id="@+id/etTestAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="producers"
            />

        <!-- Kilometres -->
        <EditText
            android:id="@+id/etKilometreAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="actors"
             />

        <!-- Engine Capacity -->
        <EditText
            android:id="@+id/etEngineCapacityAddFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="photo"
            />



        <!-- Buttons for actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="insert a image:->"
                />
            <ImageView
                android:id="@+id/ivCarAddCarFragment"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/btnAddCarADDFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                android:layout_marginStart="16dp"
                android:backgroundTint="#6F7F8F"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>